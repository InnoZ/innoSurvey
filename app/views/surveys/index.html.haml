#survey-index.all-centered
  - @surveys.each do |survey|
    %h1
      = 'Survey: '
      = link_to survey.name, survey_ident_path(survey.id)
    = 'Roles: ' + survey.roles.map(&:name).join(', ')
    - survey.stations.each do |station|
      %h2= 'Station: ' + station.name
      = 'Topics: '
      - station.topics.each do |topic|
        = link_to topic.name, topic_ident_path(topic.id)
        = ' | '
    %hr
